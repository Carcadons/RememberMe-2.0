# Replit Configuration for RememberMe PWA
hidden = [".config/**/*", "node_modules", "build"]
modules = ["nodejs-18:v3-20230608-f4cd419"]

# Development Environment
[nix]
channel = "stable-22_11"

[[ports]]
localPort = 3000
externalPort = 80
mode = "a"

# Run configuration - Serve the PWA static files
[run]
entrypoint = "server/index.js"
module = "nodejs-18:v3-20230608-f4cd419"
mode = "shell"
command = "npm start"

# Deployment
[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "cloudflare"
public = true

# Environment variables
[env]
NODE_ENV = "production"

# GitHub Import configuration
[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "server/index.js"]

[workflows]

[[workflows.workflow]]
name = "Dev"
mode = "sequential"
author = 39701622

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start dev"

[[workflows.workflow]]
name = "Prod"
mode = "sequential"
author = 39701622

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[agent]
expertMode = true
